# Application Settings
APP_NAME=Minila MVP
DEBUG=True

# Security & JWT
SECRET_KEY=your-super-secret-key-min-32-chars-change-in-production-!!
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# OTP Settings
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/minila

# Redis
REDIS_URL=redis://redis:6379/0

# Email Settings
# Provider: smtp (for dev/MailHog) or resend (for production)
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@minila.app

# SMTP (for development with MailHog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# Resend (for production)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=

# Rate Limiting
MESSAGES_PER_DAY=50
API_RATE_LIMIT_PER_MINUTE=100

# CORS (comma-separated for multiple origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=True

